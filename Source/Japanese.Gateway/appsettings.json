{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "kanji-api": {
        "ClusterId": "main-cluster",
        "Match": {
          "Path": "/main/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/{**catch-all}" }
        ]
      },
      "identity-api": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/identity/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/{**catch-all}" }
        ]
      },
      "main-swagger": {
        "ClusterId": "main-cluster",
        "Match": { "Path": "/main/swagger/{**catch-all}" }
      },
      "identity-swagger": {
        "ClusterId": "identity-cluster",
        "Match": { "Path": "/identity/swagger/{**catch-all}" },
        "Transforms": [
          { "PathPattern": "/swagger/{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "main-cluster": {
        "Destinations": {
          "main-service": { "Address": "http://localhost:5001" }
        }
      },
      "identity-cluster": {
        "Destinations": {
          "grammar-service": { "Address": "https://localhost:44368" }
        }
      }
    }
  }
}
